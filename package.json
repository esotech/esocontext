{
  "name": "@esotech/contextuate",
  "version": "2.0.0",
  "description": "**Standardized AI Context for Software Projects**",
  "main": "dist/index.js",
  "bin": {
    "contextuate": "dist/index.js"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && mkdir -p dist/templates && cp -r src/templates/* dist/templates/ && mkdir -p dist/monitor/hooks && cp src/monitor/hooks/emit-event.js dist/monitor/hooks/ && chmod +x dist/index.js dist/monitor/hooks/emit-event.js dist/monitor/daemon/cli.js dist/monitor/server/cli.js",
    "build:monitor-ui": "cd src/monitor/ui && npm install && npm run build",
    "build:all": "npm run build && npm run build:monitor-ui",
    "prepublishOnly": "npm run build:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esotech/contextuate.git"
  },
  "files": [
    "dist",
    "docs/ai/.context"
  ],
  "keywords": [
    "ai",
    "context",
    "llm",
    "agent",
    "coding-assistant",
    "copilot",
    "cursor",
    "anthropic",
    "claude",
    "monitor"
  ],
  "author": "Alexander David Conroy <alex@esotech.com> (https://github.com/geilt)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/esotech/contextuate/issues"
  },
  "homepage": "https://contextuate.md",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.5.13",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.3",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "fastify": "^5.2.0",
    "fs-extra": "^11.3.2",
    "gray-matter": "^4.0.3",
    "inquirer": "^13.0.1",
    "ioredis": "^5.4.2",
    "uuid": "^11.0.3",
    "ws": "^8.18.0"
  }
}
